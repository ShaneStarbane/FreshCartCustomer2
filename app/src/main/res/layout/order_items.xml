<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingLeft="20dp">

    <ImageView
        android:id="@+id/ivOrderProdImage"
        android:layout_width="89dp"
        android:layout_height="81dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_ic_googleplayservices"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tvOrderProdQuantity" />

    <TextView
        android:id="@+id/tvOrderProdName"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvOrderProdID"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/ivOrderProdImage"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/ivOrderProdImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderProdID"
        app:layout_constraintVertical_bias="0.011" />

    <TextView
        android:id="@+id/tvOrderProdPrice"
        android:layout_width="68dp"
        android:layout_height="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvOrderProdID"
        app:layout_constraintVertical_bias="0.024"
        android:layout_alignBottom="@+id/tvOrderProdImageURL"
        android:layout_toEndOf="@+id/tvOrderProdImageURL" />

    <TextView
        android:id="@+id/tvOrderProdID"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textSize="1sp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/ivOrderProdImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvTotalPrice" />

    <TextView
        android:id="@+id/tvOrderProdImageURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="265dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ivOrderProdImage" />

    <TextView
        android:id="@+id/tvOrderProdCurrency"
        android:layout_width="63dp"
        android:layout_height="23dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/ivOrderProdImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderProdName"
        tools:layout_editor_absoluteY="43dp"
        android:layout_alignBaseline="@+id/tvOrderProdQuantity"
        android:layout_alignBottom="@+id/tvOrderProdQuantity"
        android:layout_toEndOf="@+id/ivOrderProdImage" />

    <TextView
        android:id="@+id/tvOrderProdQuantity"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069"
        android:layout_marginStart="41dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvTotalPriceLabel"
        android:layout_width="65dp"
        android:layout_height="15dp"
        android:layout_alignBaseline="@+id/tvOrderProdName"
        android:layout_alignBottom="@+id/tvOrderProdName"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="10sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvOrderProdPrice" />
</RelativeLayout>